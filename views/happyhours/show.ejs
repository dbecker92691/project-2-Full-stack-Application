<!DOCTYPE html>
<html lang="en">
<head>
<% include ../partials/csshead %>
</head>
<body>
    <header>
       <%- include('../partials/navbar') %>
    </header>
    <main>
        <h1>
            <%=happy.restaurant%>
        </h1>
            <p>Time: <%= happy.time %></p><br/>
            <p>Neighborhood: <%= happy.neighborhood %></p><br/>
            <% if(happy.id === id){ %>
                <a href='/happyhours/<%=happy._id%>/edit'>Edit</a>
                <form action="/happyhours/<%=happy._id%>?_method=DELETE" method="POST">
                    <input type='submit' value='Delete'>
                </form>
           <% } %>
                
                
    </main>
    <section>
        <h1>
            Reviews:
        </h1>
        <% for(let i = 0; i < happy.length; i++) { %>
            <ul>
                <li>
                    <%= happy[i].restaurant %>
                    <%= happy[i].reviews %>
                </li>
            </ul>
        <% } %>
    </section>
</body>
</html>
